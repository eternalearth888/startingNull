class Main {
	/* Sums up 1+2+3+...+n */
	function int sum(int n) {
		var int i, sum; //creating variables int i and int sum
		let sum = 0; //initializing sum
		let i = 1; //initializing i
		
		while(~(i>n)) { //~ means not
			let sum = sum + i;
			let i = i + 1;
		}
		return sum;
	}

	function void main() {
		var int n, x;
		let n = Keyboard.readInt("Enter n: ");
		let x = Main.sum(n);
		
		do Output.printString("The result is: ");
		do Output.printInt(sum);
		do Output.println();
		
		return;
	}
} 
