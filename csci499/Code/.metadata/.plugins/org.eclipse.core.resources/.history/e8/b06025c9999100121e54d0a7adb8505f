package exercises;

public class concatenateAppend {
	
	// Fields for concatenateAppend
	public String first;
	public String second;
	public String combined;

	
	// Default constructor
	public concatenateAppend(String first, String second) {
		first = this.first;
		second = this.second;
	}
	
	// Add the strings together
	public String combine(String first, String second) {
		//	Loop through the first string and add it to the new string
		for (int i = 0; i <= first.length(); i++) {
			combined += first.charAt(i);
		}
		
		// Loop through the second string and add it to the new string
		for (int j = 0; j <= second.length(); j++) {
			combined += second.charAt(j);
		}
		
		return combined;
	}
}
