package game;

import java.awt.Graphics;

public class Pokemon implements Comparable<Pokemon> {

	private int location;
	private int height;
	private boolean hit;

	public Pokemon(int location) {
		this.location = location;
	}
	
	public void setHit() {
		hit = true;
	}
	
	public boolean isHit() {
		return hit;
	}
	
	@Override
	public int compareTo(Pokemon pokemon) {
		return pokemon.location - location;
	}
	
	public int getLocation(){
		return location;
	}
	public int getSize(){
		return height;
	}
	
	public boolean insideOfMe(Projectile p) {
		return( (p.getxPos() >= location && p.getxPos() < (location + TARGET_SIZE) ) && (p.getyPos() >= height && p.getyPos() < (height + TARGET_SIZE) ));
	}
	
	public void draw(Graphics g) {
		if(!isHit()){
			g.drawImage(Game.pokemon, location+2, height, null);
		}
	}
}
