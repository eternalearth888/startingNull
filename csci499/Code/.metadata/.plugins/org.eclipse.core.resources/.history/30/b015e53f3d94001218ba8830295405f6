package exercises;

public class Nodes {
	// Fields
	
	private int data; // Element stored in the node
	private Nodes next; // Refers to the next node in the list
	
	// Declaring Nodes 
	Nodes head;	// The lists first node
	Nodes tail;	// The lists last node
	
	// Default constructor for the Node class
	
	// We want to initialize a node with specified initial data and link to the next node or the null reference
	public Nodes(int givenData, Nodes connectNodes) {
		data = givenData;
		next = connectNodes;
	}
	
	// Getting and Setting the Data and Link of a Node
	
	// Accessor method to get and return the data from this node
	public int getData() {
		return data;
	}
	
	//Accessor method to get a reference to the next node
	public Nodes getNext() {
		return next;
	}
	
	
	
	
}
