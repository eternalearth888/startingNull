package tests;

import static org.junit.Assert.*;
import junit.framework.Assert;

import main.GenerateUPC;

import org.junit.Before;
import org.junit.Test;

import main.ValidateUPC;

public class TestValidateUPC {

	ValidateUPC v;
	
	private String upcLTR = "10100011010110001001100100011010001101000110101010000110100110010010011011000100110010111011101";
	private String upcRTL = "10100100010110011011100100110110110011010011101010101100010110001011000100110010001101011000101";
	private String digits = "051051000012517";
	
	@Before
	public void setup() {
		v = new ValidateUPC();
	}

	@Test
	public void testParity() {
		Assert.assertEquals(0001101, v.lefttoright(upcLTR,3,9));
	}
	
	@Test
	public void righttoleft() {
		
		Assert.assertEquals(digits, v.finalRTL());
	}
	
	@Test
	public void lefttoright() {
		
		Assert.assertEquals(digits, v.finalLTR());
	}
}
