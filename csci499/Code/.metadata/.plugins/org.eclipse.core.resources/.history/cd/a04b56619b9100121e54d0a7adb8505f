package exercises;

class characterAt {
	
	// Fields for characterAt
	// made private so that they can only be directly accessed from this class
	private String original;
	private int position;
	private char[] originalArray;
	// Default constructor
	public characterAt(String original, int position) {
		original = this.original;
		position = this.position;
	}
	
	// Turn the string into a character array
	public char[] createArray(String original) {
		char[] stringArray = original.toCharArray();
		
		return stringArray;
	}
	
	// Error check to make sure the position is not out of bounds
	public void errorBounds(char[] stringArray, int position) throws RuntimeException {
		// If the position of out of bounds, throwRuntimeException
		if (position > stringArray.length || position < 0) {
			throw new RuntimeException();
		}
	}
	
	//	Return character at position
	public char returnChar(char[] stringArray, int position) throws RuntimeException {
		// otherwise just return the element in the index
		return stringArray[position];
	}
	
	
	// Remove the character at position
	public char[] removedArray(char[] stringArray, int position) {
		
	}
	
		
		
}
