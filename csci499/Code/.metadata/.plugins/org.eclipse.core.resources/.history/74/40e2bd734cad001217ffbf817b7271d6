package gui;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;
import java.awt.Dimension;

import javax.swing.*;
import javax.swing.border.EtchedBorder;
import javax.swing.border.TitledBorder;

public class InstructionPanel extends JFrame {

	public InstructionPanel() {
		setSize(new Dimension(400,400));
		setResizable(false);
		setTitle("Instructions");
		
		JTextArea instructions = new JTextArea();
		
		Scanner read;
		String addLine = "";
		
		try {
			read = new Scanner(new File("textFiles/instructions"));
			
			while (read.hasNextLine()) {
				addLine = addLine + read.nextLine() + "\n\n";
			}
			instructions.setText(addLine);
		} catch (FileNotFoundException e) {
			System.out.println("The instruction file can't be found or doesn't exist" + e);
		}
		
		instructions.setBorder(new TitledBorder(new EtchedBorder(), "Rules / How to Play"));
		instructions.setLineWrap(true);
		instructions.setEditable(false);
		add(instructions);
	}
}
