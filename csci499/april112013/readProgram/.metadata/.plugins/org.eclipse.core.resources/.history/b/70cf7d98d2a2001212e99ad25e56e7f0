package Game;
import java.util.ArrayList;
import java.util.Collections;
import java.util.Random;

import javax.swing.JOptionPane;

public class Hint {
	private ArrayList<String> hints;
	private String returnedHint;
	

	public Hint() {
		Scanner readFile = new Scanner(new File("/FinalProject/hints"));
		hints = new ArrayList<String>();
		
		returnedHint = "";
	}
	
	public String pickRandomHint() {
		Collections.shuffle(hints);
		Random rand = new Random();
		int index = rand.nextInt(10);
		return hints.get(index);
	}
	public ArrayList<String> getHints() {
		return hints;
	}
	public void setHints(ArrayList<String> hints) {
		this.hints = hints;
	}
	public String getReturnedHint() {
		return returnedHint;
	}

	public void setReturnedHint(String returnedHint) {
		this.returnedHint = returnedHint;
	}

	//list of 10+ hints
	
}
